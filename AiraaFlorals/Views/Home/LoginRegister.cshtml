@model AiraaFlorals.Models.Customer


@{
    ViewData["Title"] = "Login";
}

<div>
    <h5 class="text-center text-dark">@ViewBag.SuccessMsg</h5>
    <h5 class="text-center text-danger">@ViewBag.Loginerror</h5>
</div>
<div>
    @*<img class="mw-100" src="~/imgs/login.jpg" />*@
</div>
<div class="d-flex gap-5 justify-content-around align-content-around">

    <div class="formbody p-5">
        <h3>Register</h3>
    <div class="w-100 p-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Full Name</label>
                <input asp-for="CustomerName" name="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" name="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" name="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Re-enter Password</label>
                <input type="password" name="repassword" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Register" class="btn btnstyle" />
            </div>
        </form>
    </div>
    </div>


    <div class="formbody p-5">
        <h3>Login</h3>
        <div class="w-100 p-5">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" name="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" name="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                    <input type="submit" value="Login" class="btn btnstyle" />
            </div>
        </form>
    </div>
    </div>
    
</div>