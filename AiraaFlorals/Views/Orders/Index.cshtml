@model IEnumerable<AiraaFlorals.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>

<table class="table carttbl">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Order Total Price
            </th>
            <th>
                Shipping Address
            </th>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
        </tr>
}
    </tbody>
</table>
