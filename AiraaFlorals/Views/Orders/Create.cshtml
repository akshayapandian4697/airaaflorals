@model AiraaFlorals.Models.Order


<h3>Checkout</h3>
<hr />
<div class=" row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label">Customer Name</label>
                <input class="form-control" value=@ViewData["CustomerName"] />
            </div>

            <div class="form-group">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderTotalPrice" class="control-label"></label>
                <input class="form-control" name="OrderTotalPrice" value=@ViewData["Total"] />
            </div>
            <div class="form-group">
                <input type="hidden" name="CartId" value=@ViewData["CartId"] />
            </div>
            <div class="form-group">
                <input type="hidden" name="CustomerId" value=@ViewData["CartId"] />
            </div>
            <div class="form-group">
                <input type="hidden" name="OrderDate" value=@ViewData["datenow"] />
            </div>
            <div class="form-group">
                <input type="submit" value="Place Order" class="btn btn-primary orderbtn" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
