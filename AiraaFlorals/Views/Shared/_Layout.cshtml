<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AiraaFlorals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AiraaFlorals.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navhead" asp-area="" asp-controller="Home" asp-action="Index">AiraaFlorals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navdiv navbar-collapse collapse justify-content-end">
                    <ul class="navig navbar-nav ">
                        @{
                            var customerId = Context.Session.GetString("CustomerId");
                        }

                        @if (!string.IsNullOrEmpty(customerId))
                        {
                             <li class="nav-item">
                            <a class="navlnk" asp-area="" asp-controller="Home" asp-action="Homescreen">Home</a>
                        </li>
                        }
                       
                        <li class="nav-item">
                            <a class="navlnk " asp-area="" asp-controller="Bouquets" asp-action="Index">Florals</a>
                        </li>
                        

                        @if (!string.IsNullOrEmpty(customerId))
                        {
                            <li class="nav-item">
                                <a class="navlnk " asp-area="" asp-controller="CartItems" asp-action="Index">My Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="navlnk " asp-area="" asp-controller="Orders" asp-action="Index">My Orders</a>
                            </li>

                             <li class="nav-item logoutdiv">
                                <a class="navlnk" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2023 - AiraaFlorals
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
